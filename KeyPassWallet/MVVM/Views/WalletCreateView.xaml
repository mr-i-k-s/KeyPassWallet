<UserControl x:Class="KeyPassWallet.MVVM.Views.WalletCreateView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:KeyPassWallet.MVVM.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" 
             d:DesignWidth="800"
             Background="Transparent"
             d:Background="Gray">
    <Grid>
        <DockPanel
            HorizontalAlignment="Center"
            VerticalAlignment="Center">

            <Border
                DockPanel.Dock="Top"
                Margin="0,0,0,10"
                Padding="10"
                BorderBrush="Black"
                BorderThickness="1"
                Width="300">

                <DockPanel>
                    <TextBlock
                        DockPanel.Dock="Top"
                        TextAlignment="Center"
                        Margin="0,0,0,10"
                        Text="Create new wallet"
                        FontWeight="DemiBold"
                        FontSize="21"/>

                    <TextBlock
                        DockPanel.Dock="Top"
                        Text="Title"/>

                    <TextBox
                        DockPanel.Dock="Top"/>

                    <TextBlock
                        DockPanel.Dock="Top"
                        Text="Password"/>

                    <TextBox
                        DockPanel.Dock="Top"/>

                    <TextBlock
                        DockPanel.Dock="Top"
                        Text="Repeat Password"/>

                    <TextBox
                        DockPanel.Dock="Top"/>

                </DockPanel>

            </Border>

            <Button
                DockPanel.Dock="Top"
                Margin="0,2"
                Content="Create"
                FontWeight="DemiBold"
                FontSize="16"
                Command="{Binding CreateCommand}"/>

            <Button
                DockPanel.Dock="Top"
                Margin="0,2"
                Content="Back"
                FontWeight="DemiBold"
                FontSize="16"
                Command="{Binding BackCommand}"/>

        </DockPanel>

    </Grid>
    
</UserControl>

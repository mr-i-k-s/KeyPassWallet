<UserControl x:Class="KeyPassWallet.MVVM.Views.WalletExplorerView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:KeyPassWallet.MVVM.Views"
             xmlns:models="clr-namespace:KeyPassWallet.MVVM.Models"
             mc:Ignorable="d" 
             d:DesignHeight="450" 
             d:DesignWidth="800"
             Background="Transparent"
             d:Background="Gray">
    <Grid>
        <DockPanel
            HorizontalAlignment="Center"
            VerticalAlignment="Center">
            
            <Border
                DockPanel.Dock="Top"
                Margin="0,0,0,10"
                Padding="10"
                BorderBrush="Black"
                BorderThickness="1"
                Width="300">

                <DockPanel>
                    <TextBlock
                        DockPanel.Dock="Top"
                        TextAlignment="Center"
                        Margin="0,0,0,10"
                        Text="KeyPassWallet v0.1"
                        FontWeight="DemiBold"
                        FontSize="21"/>

                    <ListBox
                        DockPanel.Dock="Top"
                        ItemsSource="{Binding Wallets}"
                        SelectionMode="Single"
                        HorizontalContentAlignment="Stretch"
                        Height="200">

                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <StackPanel>
                                    <TextBlock Text="{Binding Title}" 
                                               FontSize="16"/>
                                    <TextBlock Text="{Binding Date}"
                                               FontSize="10"/>
                                    <Border 
                                        Margin="0,2,0,0"
                                        BorderBrush="Black"
                                        BorderThickness="0,0,0,1"/>
                                </StackPanel>
                            </DataTemplate>
                        </ListBox.ItemTemplate>

                        <ListBox.Items>
                            <models:KeyWallet 
                                Title="Wallet 1"
                                Date="20.05.2025"/>
                            <models:KeyWallet 
                                Title="Wallet 2"
                                Date="20.05.2025"/>

                        </ListBox.Items>

                    </ListBox>
                    
                </DockPanel>
            
            </Border>

            <Button
                DockPanel.Dock="Top"
                Margin="0,2"
                Content="New Wallet"
                FontWeight="DemiBold"
                FontSize="16"
                Command="{Binding CreateWalletCommand}"/>

            <Button
                DockPanel.Dock="Top"
                Margin="0,2"
                Content="Import Wallet"
                FontWeight="DemiBold"
                FontSize="16"
                Command="{Binding ImportWalletCommand}"/>

            <Button
                DockPanel.Dock="Top"
                Margin="0,2"
                Content="Delete Wallet"
                FontWeight="DemiBold"
                FontSize="16"
                Command="{Binding DeleteWalletCommand}"/>
        </DockPanel>

    </Grid>
    
</UserControl>
